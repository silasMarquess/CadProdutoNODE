<%- include ('includes/header') %>
    <%- include ('includes/nav')%>
    <div class="">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          
          <div class="row">
            <div class="col-lg-8">
              <h4>Faça aqui o cadatro de Produtos:</h4>
              <%-include('includes/messages')%>
                          <form method="POST" action="/cadastro/register/<%=p._id%>">
                           <input type="hidden" name="_csrf" value="<%- csrfToken %>">

                              <div class="form-group">
                                <label for="txtNome">Informe o nome do Produto:</label>
                                <input type="text" class="form-control" name="nome_produto" id="txtNome" value="<%=p.nome%>">
                              </div>
    
                              <div class="form-group">
                                <label for="txtPreco">Preço do Produto (R$):</label>
                                <input type="number" class="form-control" id="txtPreco" name="preco_produto" value="<%=p.preco%>">
                              </div>
    
                              <div class="form-group">
                                  <label for="txtEstoque">Estoque do Produto (UN):</label>
                                  <input type="number" class="form-control" id="txtEstoque" name="estoque_produto" value="<%=p.estoque%>">
                                </div>

                              <button type="submit" class="btn btn-primary">Salvar</button>
                            </form>
                      </div>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

        </div>
        <%- include ('includes/footer') %>