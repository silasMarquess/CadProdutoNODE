  <%- include ('includes/header') %>
  <%- include ('includes/nav')%>
    <div class="">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <h1 class="display text-center">Lista de Produtos</h1>
                <div class="responsive-class-table">

                    <table class="table table-hover">
                        <caption>Lista de Produtos Cadastrados</caption>
                        <thead class="thead">
                        <tr>
                            <th>#</th>
                            <th>NOME</th>
                            <th>DESCRIÇÃO</th>
                            <th>PREÇO</th>
                            <th>ESTOQUE</th>
                            <th colspan="2" style="text-align: center;">OPERAÇÃO</th>          
                        </tr>
                    </thead>
                        <%produtos.forEach((produto,index)=>{ %>
                            <tr class="table">
                                <td><%=(index+1)%></td>
                                <td><%=produto.nome.toUpperCase()%></td>
                                <td><%=produto.descricao%></td>
                                <td><%=produto.preco%> R$</td>
                                <td><%=produto.estoque%> UN</td>
                                <td><a href="/cadastro/<%=produto._id%>"><i>Editar</i></a></td>
                                <td><a href="/codastro/delete/<%=produto._id%>" class="text-danger">Excluir</a></td>
                            </tr>
                        <% }); %>
                       
                    </table>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

    </div>
  <%- include ('includes/footer') %>
 
   